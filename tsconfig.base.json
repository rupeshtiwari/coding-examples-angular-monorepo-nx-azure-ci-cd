{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@myorg/branding-logger": ["libs/branding/logger/src/index.ts"],
      "@myorg/sales-puppy-editor": ["libs/sales/puppy-editor/src/index.ts"],
      "@myorg/sales-puppies": ["libs/sales/puppies/src/index.ts"],
      "@myorg/branding-ngmaterial": ["libs/branding/ngmaterial/src/index.ts"],
      "@myorg/customers-users": ["libs/customers/users/src/index.ts"],
      "@myorg/branding-ckeditor": ["libs/branding/ckeditor/src/index.js"],
      "@myorg/branding-editor": ["libs/branding/editor/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
